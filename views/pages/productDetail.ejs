<html lang="en">

<head>
    <%- include("../partials/head")%>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalle de <%= products.nombre %>
  </title>
  <link rel="stylesheet" href="/css/productDetail.css">
  <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
  <link rel="icon" href="/img/LogoCircular32x32.png">

</head>

<body>
  <header>
    <%-include('../partials/header.ejs')%>
  </header>

  </h1>
  <div class="div-productDetail">
    <div>
      <img style="width: 400px;border-radius: 7%;margin-bottom: 10px;margin-top: 10px; margin-left: 20px; margin-right: 20px;" src="/img/products/<%= products.imagen %>">
    </div>

    <div class="container-Detail">
      <h1> <!-- <span>Nombre: </span> -->
        <span><%= products.nombre %></span>
      </h1>
      <h4> 
        <%= products.categoria %>
      </h4>
      <h4> <!-- <span>Categoria: </span> -->
        <%= products.detalle %>
      </h4>
      <h2> <!-- <span>Precio:</span> -->
        u$s <%= products.precio %>
      </h2>
    </div>

  </div><br>
  <div class="div-BTN">
    <a href="/products/edit/<%= products.idProduct %>" type="button" class="btn" style="margin-right:5px;height: 40px;">Editar producto</a>
    <form action="/products/delete/<%= products.idProduct %>" method="POST">
      <button type="submit" class="btn" style="height: 40px;">Eliminar producto</button><br><br>
    </form>

    <!-- a href="/products/delete/<%= //products.idProduct %>" type="button" class="btn btn-outline-primary" style="margin-right:5px;" method="DELETE">Eliminar</a><br><br> -->
  </div>

  <%-include('../partials/footer.ejs')%>
</body>

</html>
